    <div class="row">
        <div class="col-md-5">
            <img class="figure-img" src="@Model.Image" width="80%" height="80%" alt="Card image cap"/>
        </div>

        <div class="col-md-4">
            <h3 class="my-4">@Model.Title</h3>
            <p>@Model.Description</p>
            <h3 class="my-3"Место нахождения:></h3>
            <ul>
                <li>@Model.GroupCategory</li>
                <li>@Model.Adress.Country</li>
                <li>@Model.Adress.Region</li>
                <li>@Model.Adress.City</li>
                <li>@Model.Adress.Street</li>
            </ul>
        </div>
        
    </div>

