@using LearnProgrammingTogether.ViewModels
@model DashboardViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1 class="display-4 fw-normal">Панель управления аккаунтом</h1>

<a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">Изменить аккаунт</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Group" asp-action="Create">Создать группу</a>

@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
    <a type="button" class="btn btn-primary" asp-area="" asp-controller="Technology" asp-action="Create">Добавить технологию</a>
}
<br />
<h2 class="display-4 fw-normal">Ваши группы</h2>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Groups)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap" />
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Group" asp-action="Detail" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">Посмотреть информацию</a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a type="btn btn-success" asp-controller="Group" asp-action="Edit" asp-route-id="@item.Id"
                                        class="btn btn-sm btn-outline-secondary">Изменить</a>
                                        <a type="btn btn-success" asp-controller="Group" asp-action="Delete" asp-route-id="@item.Id"
                                        class="btn btn-sm btn-outline-secondary">Удалить</a>
                                    }
                                </div>
                            </div>
                            <small class="text-muted">@item.GroupCategory</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<br />
<h2 class="display-4 fw-normal">Технологии</h2>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Technologies)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="bd-placeholder-img card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap" />
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Technology" asp-action="Detail" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">Посмотреть информацию</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a type="btn btn-success" asp-controller="Technology" asp-action="Edit" asp-route-id="@item.Id"
                                        class="btn btn-sm btn-outline-secondary">Изменить</a>
                                        <a type="btn btn-success" asp-controller="Technology" asp-action="Delete" asp-route-id="@item.Id"
                                        class="btn btn-sm btn-outline-secondary">Удалить</a>
                                    }
                                </div>
                            </div>
                            <small class="text-muted">@item.TechnologyCategory</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

