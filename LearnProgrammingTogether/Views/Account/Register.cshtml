@using LearnProgrammingTogether.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Sing up";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4 align="center">Создание нового аккаунта</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Извините!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Введите email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Введите пароль"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        @*<label><input type="checkbox" class="password-checkbox"> Показать пароль</label>*@
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердите пароль"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Введите имя пользователя" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Nickname"></label>
                        <input asp-for="Nickname" class="form-control" placeholder="Введите никнейм" />
                        <span asp-validation-for="Nickname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StudyLang"></label>
                        <input asp-for="StudyLang" class="form-control" placeholder="Введите изучаемый язык" />
                        <span asp-validation-for="StudyLang" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="TypeFramework"></label>
                        <input asp-for="TypeFramework" class="form-control" placeholder="Введите фреймворк" />
                        <span asp-validation-for="TypeFramework" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Level"></label>
                        <input asp-for="Level" class="form-control" placeholder="Введите уровень владения" />
                        <span asp-validation-for="Level" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Зарегистрироваться" />
                        <a class="btn btn-outline-secondary" asp-controller="Номе" asp-action="Index">Вернуться</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}                        